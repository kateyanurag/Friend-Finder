<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/txtMsg">
	<TextView android:text="Recent Messages" android:textSize="30sp"
		android:layout_height="wrap_content" android:id="@+id/textView1"
		android:layout_width="match_parent" />
	
	<EditText android:scrollbars="vertical" android:text="" android:id="@+id/txtChat" android:layout_width="match_parent" android:layout_height="wrap_content"></EditText>
	<Button android:text="Button" android:layout_width="match_parent" android:id="@+id/btnChat" android:layout_height="wrap_content"></Button>
    <ListView android:layout_width="match_parent"
		android:layout_height="match_parent" android:id="@+id/lstMsg"
		android:clickable="false" />
</LinearLayout>
